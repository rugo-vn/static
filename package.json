{
  "name": "@rugo-vn/static",
  "version": "1.0.0",
  "description": "Static file serving from local",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "doc": "jsdoc2md **/*.js > docs/API.md",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
