  "license": "MIT",
  "devDependencies": {
    "c8": "^7.11.2",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^8.14.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "jsdoc-to-markdown": "^7.1.1",
    "koa": "^2.13.4",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3"
  },
  "dependencies": {
    "koa-send": "^5.0.1",
    "ramda": "^0.28.0"
  }
